#!/bin/sh

export INPUT_METHOD=fictx5
export GTK_IM_MODULE=fcitx5
export QT_IM_MODULE=fcitx5
export XMODIFIERS="@im=fcitx5"

userresources=$HOME/.Xresources
usermodmap=$HOME/.Xmodmap
sysresources=/etc/X11/xinit/.Xresources
sysmodmap=/etc/X11/xinit/.Xmodmap

# merge in defaults and keymaps

if [ -f $sysresources ]; then
    xrdb -merge $sysresources
fi

if [ -f $sysmodmap ]; then
    xmodmap $sysmodmap
fi

if [ -f "$userresources" ]; then
    xrdb -merge "$userresources"
fi

if [ -f "$usermodmap" ]; then
    xmodmap "$usermodmap"
fi

# start some nice programs

if [ -d /etc/X11/xinit/xinitrc.d ] ; then
    for f in /etc/X11/xinit/xinitrc.d/?*.sh ; do
        [ -x "$f" ] && . "$f"
    done
    unset f
fi

xset r rate 220 45
/usr/bin/start-pulseaudio-x11 &
exec fcitx5 &
exec redshift &
# exec compton -CGb &
exec picom &
exec xautolock -time 8 -locker slock &
exec xautolock -time 60 -locker "systemctl suspend" &

# suckless
feh --no-fehbg --bg-scale '/home/lg/Desktop/wp/NyaITD5-arch-linux-wallpaper.png' &
exec dwmstatus &
exec st &
exec keynav &
exec ~/.startdwm.sh

# exec dwm
# exec ~/.dwm-statusbar.sh &
# exec aria2c --conf-path=/home/lg/.dotfiles/aria2/aria2.conf &
# exec i3 -V >> ~/.config/i3/log/i3log-$(date +'%F-%k-%M-%S') 2>&1
