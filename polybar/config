[module/bspwm]
type = internal/bspwm

label-focused = %name%
label-focused-background = ${colors.background-alt}
label-focused-foreground = ${colors.foreground-alt}
; label-focused-overline= ${colors.blue}
label-focused-underline= ${colors.blue}
label-focused-padding = 1

label-occupied = %name%
label-occupied-padding = 1

label-urgent = %name%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

label-empty = %name%
label-empty-foreground = ${colors.grey}
label-empty-padding = 1

; label-separator = %{F#555555}%{F-}

[module/xwindow]
type = internal/xwindow
format = <label>

; label = %title:0:30:...%
label = %title%
label-maxlen = 30
label-empty = [bspwm]

format-foreground = ${colors.foreground-alt}
format-padding = 1

[module/pulseaudio]
type = internal/pulseaudio
format-volume =  <label-volume>

label-volume =  %percentage%%
label-volume-foreground = ${colors.yellow}

label-muted =  %percentage%%
label-muted-foreground = ${colors.yellow}

[module/cpu]
type = internal/cpu
interval = 2
label =  %percentage%%
format-foreground = ${colors.red}

[module/memory]
type = internal/memory
interval = 2
label =  %gb_used%
format-foreground = ${colors.orange}

[module/temperature]
type = internal/temperature
interval = 3
thermal-zone = 0
warn-temperature = 90

format =  <label>
format-warn =  <label-warn>

label =  %temperature-c%
label-foreground = ${colors.red}

label-warn =  %temperature-c%
label-warn-foreground = ${colors.red}

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC0
full-at = 99

label-charging =  %percentage%%[#]
label-discharging =  %percentage%%[$]
label-full =  %percentage%%[@]
label-charging-foreground = ${colors.green}
label-discharging-foreground = ${colors.green}
label-full-foreground = ${colors.green}

[module/date]
type = internal/date
interval = 5
date = %a %F
time = %R
format-foreground = ${colors.blue}

; label =  %date% %time% %{F#D7005F}%{F-}
label =  %date% %time% %{F#D7005F}%{F-}

[module/network]
type = internal/network
interface = enp0s31f6
interval = 1.0

format-connected = <label-connected>
label-connected = [%downspeed:7:9% %upspeed:7:9%]
label-connected-foreground = ${colors.green}

