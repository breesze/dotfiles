[colors]
background = #1a1a1a
background-alt = #202020
foreground = #D7005F
foreground-alt = #00bbff
alert = #bd2c40

red = #D7005F
blue = #0087ff
orange = #f67400
yellow = #fff000
green = #44ff00
grey = #555555

[bar/lagbar]
width = 100%
height = 30
offset-x = 0%
offset-y = 0%
; radius = 1.0
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

separator = %{F#555555}%{F-}

; line-size = 3
; line-color = ${colors.blue}
; border-size = 2
; border-color = #00bbff

padding-left = 0
padding-right = 1
module-margin-left = 1
module-margin-right = 1

font-0 = SarasaMonoCL:style=Semibold:size=15;5
font-1 = FontAwesome5Free:style=Solid:size=14;4
font-2 = FontAwesome5Free:style=Regular:size=14;4
font-3 = FontAwesome5Brands:style=Regular:size=14;4

modules-left = bspwm xwindow 
modules-center =
modules-right = network pulseaudio cpu memory temperature battery date

; tray-position = right
; tray-padding = 0
; tray-background = #0063ff

wm-restack = bspwm

; override-redirect = true

scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev
cursor-click = pointer
cursor-scroll = ns-resize

[module/bspwm]
type = internal/bspwm

label-focused = %name%
label-focused-background = ${colors.background-alt}
label-focused-foreground = ${colors.foreground-alt}
; label-focused-underline= ${colors.blue}
label-focused-padding = 1

label-occupied = %name%
label-occupied-padding = 1

label-urgent = %name%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

label-empty = %name%
label-empty-foreground = ${colors.grey}
label-empty-padding = 1

; label-separator = %{F#555555}%{F-}

[module/xwindow]
type = internal/xwindow
format = <label>

; label = %title:0:30:...%
label = %title%
label-maxlen = 30
label-empty = [bspwm]

format-foreground = ${colors.foreground-alt}
; format-background = ${colors.background-alt}
format-padding = 1

[module/pulseaudio]
type = internal/pulseaudio
format-volume =  <label-volume>

label-volume = " %percentage%%" 
; label-volume-foreground = ${colors.red}
; label-volume-underline = ${colors.yellow}

label-muted = " %percentage%%"
; label-muted-foreground = ${colors.red}
; label-muted-underline = ${colors.yellow}

[module/cpu]
type = internal/cpu
interval = 2
label = " %percentage%%"
; format-foreground = ${colors.red}
; format-underline = ${colors.red}

[module/memory]
type = internal/memory
interval = 2
label = " %gb_used%"
; format-foreground = ${colors.red}
; format-underline = ${colors.orange}

[module/temperature]
type = internal/temperature
interval = 3
thermal-zone = 0
warn-temperature = 90

format =  <label>
format-warn =  <label-warn>

label = " %temperature-c%"
; label-foreground = ${colors.red}
; label-underline = ${colors.red}

label-warn = " %temperature-c%"
; label-warn-foreground = ${colors.red}
; label-warn-underline = ${colors.red}

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC0
full-at = 99

label-charging = " %percentage%%[#]"
label-discharging = " %percentage%%[$]"
label-full = " %percentage%%[@]"

; label-charging-foreground = ${colors.red}
; label-discharging-foreground = ${colors.red}
; label-full-foreground = ${colors.red}
; label-charging-underline = ${colors.green}
; label-discharging-underline = ${colors.green}
; label-full-underline = ${colors.green}

[module/date]
type = internal/date
interval = 5
date = %a %F
time = %R
; format-foreground = ${colors.red}
; format-underline = ${colors.blue}

; label =  %date% %time% %{F#D7005F}%{F-}
label =  "%date% %time% "

[module/network]
type = internal/network
interface = enp0s31f6
interval = 1.0

format-connected = <label-connected>
label-connected = [%downspeed:7:9% %upspeed:7:9%]
; label-connected-foreground = ${colors.red}
; label-connected-underline = ${colors.green}

[settings]
screenchange-reload = flase
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
;pseudo-transparency = false

